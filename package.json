{
  "name": "@comparto/eslint-config",
  "version": "1.0.2",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/comparto/eslint-config.git"
  },
  "author": "@jimmy-guzman <jimmy.guzman@outlook.com>",
  "license": "MIT",
  "keywords": [
    "eslint",
    "eslintconfig",
    "comparte"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prettify": "prettier '**/**/*.{js,md}' --write",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint/ . --ext .js",
    "lint:fix": "yarn lint --fix",
    "test": "ava",
    "test:watch": "yarn test --watch",
    "test:coverage": "nyc ava",
    "test:ci": "nyc --silent ava --fail-fast"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md}": [
      "prettier --write"
    ],
    "*.{js}": [
      "eslint --fix"
    ]
  },
  "peerDependencies": {
    "eslint": "^7.2.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "babel-eslint": "^10.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "ava": "^3.9.0",
    "eslint": "^7.2.0",
    "eslint-plugin-ava": "^10.3.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.10",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "semantic-release": "^17.0.8",
    "typescript": "^3.9.5"
  },
  "files": [
    "index.js",
    "/rules"
  ]
}
