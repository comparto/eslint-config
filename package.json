{
  "name": "@comparto/eslint-config",
  "version": "4.0.1",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/comparto/eslint-config.git"
  },
  "author": "@jimmy-guzman <jimmy.guzman@outlook.com>",
  "license": "MIT",
  "keywords": [
    "eslint",
    "eslintconfig",
    "comparte"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prettify": "prettier '**/**/*.{js,md}' --write",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint/ . --ext .js",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "yarn test:coverage --ci && yarn find-new-rules",
    "find-new-rules": "eslint-find-rules --unused ./src/index.js",
    "release": "cross-env HUSKY_BYPASS=true npx semantic-release",
    "cz": "git-cz"
  },
  "prettier": "@comparto/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{md}": [
      "prettier --write"
    ],
    "*.{js}": [
      "eslint --fix"
    ]
  },
  "peerDependencies": {
    "eslint": "^7.14.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "babel-eslint": "^10.1.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0"
  },
  "devDependencies": {
    "@comparto/prettier-config": "^1.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "commitlint": "^9.1.2",
    "cross-env": "^7.0.2",
    "eslint": "^7.14.0",
    "eslint-find-rules": "^3.6.1",
    "git-cz": "^4.7.1",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.2.10",
    "prettier": "^2.0.5",
    "semantic-release": "^17.0.8",
    "typescript": "^3.9.5"
  },
  "files": [
    "src"
  ]
}
