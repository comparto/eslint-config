{
  "name": "@comparto/eslint-config",
  "version": "3.0.0",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/comparto/eslint-config.git"
  },
  "author": "@jimmy-guzman <jimmy.guzman@outlook.com>",
  "license": "MIT",
  "keywords": [
    "eslint",
    "eslintconfig",
    "comparte"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prettify": "prettier '**/**/*.{js,md}' --write",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint/ . --ext .js",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "yarn test:coverage",
    "find-new-rules": "eslint-find-rules --unused ./src/index.js"
  },
  "prettier": "@comparto/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md}": [
      "prettier --write"
    ],
    "*.{js}": [
      "eslint --fix"
    ]
  },
  "peerDependencies": {
    "eslint": "^7.5.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "babel-eslint": "^10.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-webpack": "^0.12.2",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4"
  },
  "devDependencies": {
    "@comparto/prettier-config": "^1.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "eslint": "^7.5.0",
    "eslint-find-rules": "^3.6.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "semantic-release": "^17.0.8",
    "typescript": "^3.9.5"
  },
  "files": [
    "src"
  ]
}
